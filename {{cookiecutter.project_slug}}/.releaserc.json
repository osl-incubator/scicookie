{%- if cookiecutter.auto_format_tool == 'blue' %}
  {%- set QUOTE = "'" -%}
{%- elif cookiecutter.auto_format_tool == 'black' %}
  {%- set QUOTE = '"' -%}
{%- else %}
  {%- set QUOTE = "'" -%}
{%- endif %}

{
  "branches": ["main"],
  "tagFormat": "${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["{{ cookiecutter.package_slug }}/__init__.py"],
            "from": "__version__ = {{ QUOTE }}.*{{ QUOTE }}  # semantic-release",
            "to": "__version__ = {{ QUOTE }}${nextRelease.version}{{ QUOTE }}  # semantic-release",
            "results": [
              {
                "file": "{{ cookiecutter.package_slug }}/__init__.py",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": ["pyproject.toml"],
            "from": "version = \".*\"  # semantic-release",
            "to": "version = \"${nextRelease.version}\"  # semantic-release",
            "results": [
              {
                "file": "pyproject.toml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Release Notes\n---",
        "changelogFile": "docs/changelog.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "poetry build"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["dist/*.whl", "dist/*.tar.gz"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "pyproject.toml",
          "docs/changelog.md",
          "{{ cookiecutter.package_slug }}/__init__.py"
        ],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ]
}
